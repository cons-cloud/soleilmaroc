import React, { useEffect, useState } from 'react';
import { supabase } from '../../../lib/supabase';
import { Car, Plus, Edit, Trash2 } from 'lucide-react';
import toast from 'react-hot-toast';
import VoitureForm from '../../../components/forms/VoitureForm';
import ConfirmDialog from '../../../components/modals/ConfirmDialog';

const LocationsVoituresManagement: React.FC = () => {
  const [voitures, setVoitures] = useState<any[]>([]);
  const [loading, setLoading] = useState(true);
  const [searchTerm, setSearchTerm] = useState('');
  const [showForm, setShowForm] = useState(false);
  const [selectedVoiture, setSelectedVoiture] = useState<any>(null);
  const [showConfirm, setShowConfirm] = useState(false);
  const [voitureToDelete, setVoitureToDelete] = useState<any>(null);

  useEffect(() => {
    loadVoitures();
  }, []);

  const loadVoitures = async () => {
    try {
      const { data, error } = await supabase
        .from('locations_voitures')
        .select('*')
        .order('created_at', { ascending: false });
      if (error) throw error;
      setVoitures(data || []);
    } catch (error) {
      console.error('Error:', error);
      toast.error('Erreur lors du chargement');
    } finally {
      setLoading(false);
    }
  };

  const handleNew = () => {
    setSelectedVoiture(null);
    setShowForm(true);
  };

  const handleEdit = (voiture: any) => {
    setSelectedVoiture(voiture);
    setShowForm(true);
  };

  const handleDeleteClick = (voiture: any) => {
    setVoitureToDelete(voiture);
    setShowConfirm(true);
  };

  const handleDeleteConfirm = async () => {
    if (!voitureToDelete) return;
    try {
      const { error } = await supabase.from('locations_voitures').delete().eq('id', voitureToDelete.id);
      if (error) throw error;
      toast.success('Voiture supprim√©e');
      setShowConfirm(false);
      setVoitureToDelete(null);
      loadVoitures();
    } catch (error) {
      toast.error('Erreur lors de la suppression');
    }
  };

  const filteredVoitures = voitures.filter(item =>
    item.brand?.toLowerCase().includes(searchTerm.toLowerCase()) ||
    item.model?.toLowerCase().includes(searchTerm.toLowerCase())
  );

  if (loading) {
    return (
      <div className="flex items-center justify-center h-64">
        <div className="animate-spin rounded-full h-12 w-12 border-b-2 border-emerald-600"></div>
      </div>
    );
  }

  return (
    <div className="space-y-6">
        <div className="flex justify-between items-center">
          <div>
            <h1 className="text-2xl font-bold text-gray-900">Gestion des Voitures</h1>
            <p className="text-gray-600 mt-1">{filteredVoitures.length} voiture(s)</p>
          </div>
          <button onClick={handleNew} className="flex items-center px-4 py-2 bg-emerald-600 text-white rounded-lg hover:bg-emerald-700 transition">
            <Plus className="h-5 w-5 mr-2" />
            Nouvelle Voiture
          </button>
        </div>

        <div className="bg-white/80 backdrop-blur-sm rounded-lg shadow-sm p-4">
          <input
            type="text"
            placeholder="Rechercher..."
            value={searchTerm}
            onChange={(e) => setSearchTerm(e.target.value)}
            className="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500"
          />
        </div>

        <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {filteredVoitures.map((item) => (
            <div key={item.id} className="bg-white/80 backdrop-blur-sm rounded-lg shadow-sm overflow-hidden hover:shadow-md transition-shadow">
              <div className="relative h-48 bg-gray-200">
                {item.images?.[0] ? (
                  <img src={item.images[0]} alt={`${item.brand} ${item.model}`} className="w-full h-full object-cover" />
                ) : (
                  <div className="w-full h-full flex items-center justify-center">
                    <Car className="h-12 w-12 text-gray-400" />
                  </div>
                )}
                {item.featured && (
                  <span className="absolute top-2 right-2 px-2 py-1 bg-yellow-500 text-white text-xs font-semibold rounded">‚≠ê</span>
                )}
              </div>
              <div className="p-4">
                <h3 className="font-semibold text-gray-900">{item.brand} {item.model}</h3>
                <p className="text-sm text-gray-500 mb-2">{item.year} ‚Ä¢ {item.category}</p>
                <div className="flex items-center gap-3 text-sm text-gray-600 mb-3">
                  <span>üë• {item.seats} places</span>
                  <span>‚öôÔ∏è {item.transmission}</span>
                  <span>‚õΩ {item.fuel_type}</span>
                </div>
                <div className="flex items-center justify-between pt-3 border-t">
                  <div>
                    <span className="text-lg font-bold text-emerald-600">{item.price_per_day} MAD</span>
                    <span className="text-sm text-gray-500">/jour</span>
                  </div>
                  <div className="flex gap-2">
                    <button onClick={() => handleEdit(item)} className="p-2 text-emerald-600 hover:bg-emerald-50 rounded transition" title="Modifier">
                      <Edit className="h-4 w-4" />
                    </button>
                    <button onClick={() => handleDeleteClick(item)} className="p-2 text-red-600 hover:bg-red-50 rounded transition" title="Supprimer">
                      <Trash2 className="h-4 w-4" />
                    </button>
                  </div>
                </div>
              </div>
            </div>
          ))}
        </div>

        {filteredVoitures.length === 0 && (
          <div className="bg-white/80 backdrop-blur-sm rounded-lg shadow-sm p-12 text-center">
            <Car className="h-16 w-16 text-gray-400 mx-auto mb-4" />
            <h3 className="text-lg font-medium text-gray-900 mb-2">Aucune voiture trouv√©e</h3>
          </div>
        )}
      </div>

      {/* Modals */}
      {showForm && (
        <VoitureForm
          voiture={selectedVoiture}
          onClose={() => {
            setShowForm(false);
            setSelectedVoiture(null);
          }}
          onSuccess={() => {
            loadVoitures();
          }}
        />
      )}

      {showConfirm && (
        <ConfirmDialog
          isOpen={showConfirm}
          onClose={() => {
            setShowConfirm(false);
            setVoitureToDelete(null);
          }}
          onConfirm={handleDeleteConfirm}
          title="Supprimer la voiture"
          message={`√ätes-vous s√ªr de vouloir supprimer "${voitureToDelete?.brand} ${voitureToDelete?.model}" ?`}
          type="danger"
          confirmText="Supprimer"
          cancelText="Annuler"
        />
      )}
    </div>
  );
};

// Exportation nomm√©e pour la compatibilit√© avec React.lazy
export { LocationsVoituresManagement as default };

# ===================================
# Configuration Supabase (Frontend)
# ===================================
# Obtenez ces valeurs depuis votre tableau de bord Supabase > Project Settings > API
VITE_SUPABASE_URL=https://votre-projet-supabase.supabase.co
VITE_SUPABASE_ANON_KEY=votre_cle_anon_supabase

# ===================================
# Clés d'API Stripe
# ===================================
# Obtenez ces valeurs depuis votre tableau de bord Stripe > Developers > API keys
VITE_STRIPE_PUBLIC_KEY=pk_test_votre_cle_publique_stripe
STRIPE_SECRET_KEY=sk_test_votre_cle_secrete_stripe

# ===================================
# Configuration JWT
# ===================================
# Générez une clé sécurisée avec : openssl rand -base64 32
JWT_SECRET=votre_cle_jwt_securisee_32_caracteres_aleatoires

# ===================================
# Configuration de l'application
# ===================================
# URL de base de l'application (sans slash final)
VITE_APP_URL=http://localhost:3000

# Configuration du serveur
PORT=3001
NODE_ENV=development

# ===================================
# Authentification Google OAuth
# ===================================
# Obtenez ces valeurs depuis Google Cloud Console > Credentials
VITE_GOOGLE_CLIENT_ID=votre_google_client_id.apps.googleusercontent.com

# ===================================
# Clés de service (Backend)
# ===================================
# Ces clés ne doivent JAMAIS être exposées côté client
SUPABASE_SERVICE_ROLE_KEY=sb_cle_secrete_du_service_role
